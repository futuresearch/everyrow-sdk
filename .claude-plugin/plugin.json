{
  "name": "everyrow",
  "description": "Claude Code plugin for the everyrow SDK - AI-powered data processing utilities for transforming, deduping, merging, ranking, and screening dataframes",
  "version": "0.2.0",
  "author": {
    "name": "FutureSearch"
  },
  "repository": "https://github.com/futuresearch/everyrow-sdk",
  "mcpServers": {
    "everyrow": {
      "command": "uvx",
      "args": ["everyrow-mcp"],
      "env": {
        "EVERYROW_API_KEY": "${EVERYROW_API_KEY}"
      }
    }
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "mcp__everyrow__everyrow_.*_submit",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/everyrow-mcp/scripts/everyrow-track-submit.sh\"",
            "statusMessage": "Tracking everyrow task..."
          }
        ]
      },
      {
        "matcher": "mcp__everyrow__everyrow_progress",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/everyrow-mcp/scripts/everyrow-track-progress.sh\""
          }
        ]
      },
      {
        "matcher": "mcp__everyrow__everyrow_results",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/everyrow-mcp/scripts/everyrow-track-results.sh\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/everyrow-mcp/scripts/everyrow-stop-guard.sh\""
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "rm -f /tmp/everyrow-task.json"
          }
        ]
      }
    ]
  }
}
